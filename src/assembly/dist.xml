<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>
	<fileSets>

		<!-- root distribution folder -->
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				
				<include>CONTRIBUTING*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
				<include>README*</include>
			</includes>
		</fileSet>

		<!-- binary script folder -->
		<fileSet>
			<directory>${project.basedir}/bin</directory>
			<outputDirectory>bin</outputDirectory>
		</fileSet>

		<!-- api documentation -->
		<fileSet>
			<directory>${project.build.directory}/apidocs</directory>
			<outputDirectory>docs/apidocs</outputDirectory>
		</fileSet>
		
		<!-- documentation pdf -->
		<fileSet>
			<directory>${project.build.directory}/site</directory>
			<outputDirectory>docs</outputDirectory>
			<includes>
				<include>${project.name}.pdf</include>
			</includes>
		</fileSet>

		<!-- configuration properties folder -->
		<fileSet>
			<directory>${project.basedir}/etc</directory>
			<outputDirectory>etc</outputDirectory>
		</fileSet>

		<!-- source code folder -->
		<fileSet>
			<directory>${project.basedir}/src</directory>
			<outputDirectory>src/src</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>/src</outputDirectory>
			<includes>
				<include>pom.xml</include>
			</includes>
		</fileSet>
		
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>